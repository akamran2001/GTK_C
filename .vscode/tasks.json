{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc-11 build active file",
			"command": "/usr/bin/gcc-11",
			"args": [
				"-o",
				"main",
				"main.c",
				"`pkg-config --cflags --libs gtk4`"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/gcc-11"
		}
	]
}